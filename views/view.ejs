<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Employee Data</title>
    <style>
        body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #1a1a1a; /* Dark background */
    color: #fff; /* White text */
}

table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
    background-color: #2d2d2d; /* Darker background for the table */
    border-radius: 8px; /* Add border-radius for a softer look */
    overflow: hidden; /* Ensure border-radius works as expected */
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Add shadow for depth */
}

th, td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid #333; /* Darker border */
}

th {
    background-color: #3d3d3d; /* Darker header background */
    border-bottom: 2px solid #333; /* Thicker bottom border for headers */
}

td:last-child {
    border-bottom: none; /* Remove bottom border from last column */
}

tr:hover {
    background-color: #3d3d3d; /* Darker background on hover */
}

button[type="edit"], button[type="delete"] {
    background-color: #b30000; /* Dark red */
    border: none;
    color: white;
    padding: 8px 16px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 14px;
    margin: 4px 2px;
    cursor: pointer;
    border-radius: 4px;
    transition: background-color 0.3s;
}

button[type="edit"] a, button[type="delete"] a {
    color: white;
    text-decoration: none;
}

button[type="edit"]:hover, button[type="delete"]:hover {
    background-color: #800000; /* Darker red on hover */
}

    </style>
</head>
<body>
    <table>
        <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Employee ID</th>
            <th>Date of Birth</th>
            <th>Action</th>
        </tr>
        <tbody>
            <% Employees.forEach(function(employee) { %>
                <tr>
                    <td><%= employee.id %></td>
                    <td><%= employee.firstName %></td>
                    <td><%= employee.lastName %></td>
                    <td><%= employee.email %></td>
                    <td><%= employee.employeeId %></td>
                    <td><%= employee.dob %></td>
                    <td>
                        <button type="edit">
                            <a href="/edit/<%=employee.id%>">Edit</a>
                        </button>
                        <button type="delete">
                            <a href="/delete/<%=employee.id%>">Delete</a>
                        </button>
                    </td>
                    
                    <!-- <td><%= employee.code %></td> -->
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
